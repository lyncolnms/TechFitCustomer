<?xml version="1.0" encoding="utf-8"?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TechFitCustomer.Features.Customer.Views.CustomerFormView"
    x:Name="CustomerFormRoot">
    <VerticalStackLayout
        Padding="20"
        Spacing="25"
        VerticalOptions="Center">
        <Label
            Text="{Binding FormTitle, Source={x:Reference CustomerFormRoot}}"
            FontAttributes="Bold"
            FontSize="32"
            HorizontalOptions="Center" />
        <Entry
            Placeholder="Nome"
            Keyboard="Text"
            Text="{Binding Name, Mode=TwoWay, Source={x:Reference CustomerFormRoot}}" />
        <Entry
            Placeholder="Sobrenome"
            Keyboard="Text"
            Text="{Binding Lastname, Mode=TwoWay, Source={x:Reference CustomerFormRoot}}" />
        <Entry
            Placeholder="Idade"
            Keyboard="Numeric"
            Text="{Binding Age, Mode=TwoWay, Source={x:Reference CustomerFormRoot}}" />
        <Entry
            Placeholder="EndereÃ§o"
            Keyboard="Text"
            Text="{Binding Address, Mode=TwoWay, Source={x:Reference CustomerFormRoot}}" />
        <Button
            Text="{Binding ButtonText, Source={x:Reference CustomerFormRoot}}"
            Command="{Binding SaveCommand, Source={x:Reference CustomerFormRoot}}"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentView>

