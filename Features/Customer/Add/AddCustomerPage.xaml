<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TechFitCustomer.Features.Customer.Views"
    xmlns:add="clr-namespace:TechFitCustomer.Features.Customer.Add"
    x:Class="TechFitCustomer.Features.Customer.Add.AddCustomerPage"
    x:DataType="add:AddCustomerPageViewModel">

    <ScrollView>
        
        <views:CustomerFormView
            Name="{Binding Name, Mode=TwoWay}"
            Lastname="{Binding Lastname, Mode=TwoWay}"
            Age="{Binding Age, Mode=TwoWay}"
            Address="{Binding Address, Mode=TwoWay}"
            SaveCommand="{Binding SaveCommand}"
            CancelCommand="{Binding CancelCommand}"
            FormTitle="Adicionar Cliente"
            ButtonText="Salvar" />
        
    </ScrollView>

</ContentPage>