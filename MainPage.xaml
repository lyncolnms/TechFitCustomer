<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechFitCustomer.MainPage">

    <ScrollView>
        
        <Grid
            RowDefinitions="Auto, *"
            RowSpacing="12">
            
            <Button 
                Grid.Row="0"
                HorizontalOptions="Center"
                WidthRequest="200"
                Text="Adicionar Cliente" />
            
            <VerticalStackLayout
                Grid.Row="1">
                
                <HorizontalStackLayout
                    Spacing="5"
                    HorizontalOptions="Center">
                
                    <Label
                        Text="Name"/>
                    
                    <Label
                        Text="Lastname"/>
                    
                    <Label
                        Text="Age"/>
                    
                    <Label
                        Text="Address"/>
                    
                    <HorizontalStackLayout
                        Spacing="12">
                    
                        <Button
                            Text="Editar" />

                        <Button
                            Text="Remover" />
                    
                    </HorizontalStackLayout>
                    
                </HorizontalStackLayout>
                
            </VerticalStackLayout>
            
        </Grid>
        
    </ScrollView>

</ContentPage>
